{% extends "layout.html.twig" %}

{% block content %}
<main>
  <form class="col s10">
    <div class="row">
      <div class="input-field col s10">
        <input disabled value="Organisation" id="disabled" type="text" class="validate">
        <label for="disabled">Disabled</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10">
        
        {{ form_widget(form.firstname) }}
        <label for="firstname">{{ form_label(form.firstname) }}</label>
      </div>
    </div>

      <div class="row">
      <div class="input-field col s10">
        <input id="lastname" type="text" class="validate">
        <label for="lastname">Last Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s10">
        <input id="email" type="email" class="validate">
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="button-field col s10">
        <button type="submit" class="validate">CREATE</button>
      </div>
    </div>
  </form>

</main>
{% endblock %}
