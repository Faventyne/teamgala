{% extends "layout.html.twig" %}

{% block content %}
  <img src="lib/img/Serpico.png" alt="logo serpico">
    {{ form_start(form) }}

  <form class="col s10">
    <div class="row">
      <div class="input-field col s10">
        <input disabled value="Organisation" id="disabled" type="text" class="validate">
        <label for="disabled">Disabled</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10">

          {{ form_widget(form.firstname) }}
        <label for="firstname">{{ form_label(form.firstname) }}</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s10">

          {{ form_widget(form.lastname) }}
        <label for="lastname"> {{ form_label(form.lastname) }}</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s10">

          {{ form_widget(form.email) }}
        <label for="email"> {{ form_label(form.email) }}</label>
      </div>
    </div>
    <div class="row">
      <div class="button-field col s10">
          {{ form_row(form.submit) }}
      </div>
    </div>
  </form>

    {{ form_end(form)}}
{% endblock %}
