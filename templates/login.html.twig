{% extends "layout.html.twig" %}

{% block content %}

  <img src="lib/img/Serpico.png" alt="logo Serpico">

  <form action="{{ path('admin_login_check') }}" method="post" class="col s10">
      {{ error }}
    <div class="input-field col s10">
      <input type="text" name="_username" value="{{ last_username }}" />
    </div>
    <div class="input-field col s10">
      <input type="password" name="_password" value="" />
    </div>
    <div class="button-field col s10">
      <input type="submit" />
    </div>
  </form>



  {{ form_start(form) }}
  <form class="col s10">
    <div class="row">
      <div class="input-field col s10">
        {{ form_row(form.email) }}
      </div>
    </div>
    <div id="formulaire" class="row">
      <div class="input-field col s10">
        {{ form_row(form.password) }}
      </div>
    </div>
    <p>
      <input type="checkbox" id="test5" checked/>
      <label for="test5">Remember me</label>
    </p>
    <div class="row">
      <div class="button-field col s10">
        {{ form_row(form.submit) }}
      </div>
    </div>
  </form>
{{ form_end(form)}}
{% endblock %}
